<Window x:Class="WpfApplication4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="550"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Loaded="Window_Loaded"
        mc:Ignorable="d">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96 px" />
            <ColumnDefinition x:Name="configPanel" Width="0*" />
            <ColumnDefinition Width="32"
                              MinWidth="32 px"
                              MaxWidth="64" />
            <ColumnDefinition Width="7 px" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="5"
              Height="30"
              Margin="0,0,0,0"
              VerticalAlignment="Top">
            <MenuItem Width="90"
                      Height="28"
                      Margin="1,1,1,1"
                      Click="openButton_Click"
                      FontStretch="Condensed"
                      Header="Open" />
            <MenuItem Width="90"
                      Height="28"
                      Margin="1,1,1,1"
                      Header="Exit" />
        </Menu>
        <Button x:Name="graphButton"
                Grid.Row="1"
                Width="88"
                Height="36"
                Margin="3,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="White"
                Click="graphButton_Click"
                Content="Graph"
                FontSize="14"
                Foreground="#FF2196F3"
                ToolTip="Настройка графика" />
        <Button x:Name="styleButton"
                Grid.Row="1"
                Width="88"
                Height="36"
                Margin="3,45,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="White"
                Click="styleButton_Click"
                Content="Style"
                FontSize="14"
                Foreground="#FF2196F3"
                ToolTip="Настройка графика" />
        <Button x:Name="analysisButton"
                Grid.Row="1"
                Width="88"
                Height="36"
                Margin="3,85,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="White"
                Click="analysisButton_Click"
                Content="Analysis"
                FontSize="14"
                Foreground="#FF2196F3"
                ToolTip="Настройка графика" />
        <StackPanel x:Name="configStackPanel"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,0,32,0" />
        <Button x:Name="toolButton_1"
                Grid.Row="1"
                Grid.Column="2"
                Width="28"
                Height="28"
                Margin="2,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="1"
                RenderTransformOrigin="0.357,0.179" />
        <Button x:Name="toolButton_2"
                Grid.Row="1"
                Grid.Column="2"
                Width="28"
                Height="28"
                Margin="2,40,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="2"
                RenderTransformOrigin="0.357,0.179" />
        <Button x:Name="toolButton_3"
                Grid.Row="1"
                Grid.Column="2"
                Width="28"
                Height="28"
                Margin="2,75,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="3"
                RenderTransformOrigin="0.357,0.179" />
        <Button x:Name="toolButton_4"
                Grid.Row="1"
                Grid.Column="2"
                Width="28"
                Height="28"
                Margin="2,110,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="4"
                RenderTransformOrigin="0.357,0.179" />
        <GridSplitter Grid.Row="1"
                      Grid.Column="3"
                      Width="3"
                      Margin="2,0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      ShowsPreview="False" />
        <WindowsFormsHost x:Name="GrPanel"
                          Grid.Row="1"
                          Grid.Column="4"
                          Margin="0"
                          Background="{x:Null}" />
    </Grid>
</Window>